<!DOCTYPE html>
<html>
  <head>
    <title>ChatRoom</title>
    <link rel='stylesheet' href='/stylesheets/users.css' />
   <link rel='stylesheet' href='/stylesheets/resume_css.css' />
</head>

<body bgcolor="#000000">
<nav><a href="/find?from={{fromuser}}">Find Friends</a>|
<a href="/group/create?from={{fromuser}}">Create Group</a>|
<a href="/logout">Logout</a>
</nav>
<div class="otherUsers">
<div class="chat_left">
<h1>People</h1>
{{#users}}

<a class="hButton3"  href="/users/change?from={{fromuser}}&name={{username}}">{{username}}</a></h2><br>

{{/users}}

<h1>Groups</h1>
{{#groups}}
<a class="hButton3" href="/users/changegrp?from={{fromuser}}&gname={{groupname}}">{{groupname}}</a>

{{/groups}} 
<br>
<br>
</div>
</div>
<div class="receiver">
<div class="chat_right">

{{#posts}}
<div class="msg">
 <a ><b>{{from}}:</b> </a>&nbsp;&nbsp;&nbsp;<a> {{content}}</a>
</div>
{{/posts}}

{{#gposts}}
<div class="msg">
 <a ><b>{{from}}:</b> </a>&nbsp;&nbsp;&nbsp;<a> {{content}}</a>
</div>
{{/gposts}}






<div class="sender" >
<form method="post" action="/users/add" style="display:inline;">
<input type="text" name="from" hidden="hidden" value="{{fromuser}}" />
<input type="text" name="to" hidden="hidden" value="{{to}}" />

<input type="text" class="sendtext" name="content"   placeholder="Send Message" />
<input class="send" type="submit" value="add">
<br><br>
</form>
</div>
</div>
</div>

</body>
</html>
